// Function to calculate the sum of the first n natural numbers
function calculateSum(n) {
    let sum = 0;
    let i = 1;

    do {
        sum += i;
        i++;
    } while (i <= n);

    return sum;
}

// Example usage:
let n = 10;
let result = calculateSum(n);
console.log("The sum of the first " + n + " natural numbers is: " + result);
